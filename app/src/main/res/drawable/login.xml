<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <!-- 实心 -->
            <solid android:color="@color/grey" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <!-- 实心    lanse -->
            <solid android:color="@color/lightlanse" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />

            <stroke android:width="@dimen/margin1" android:color="@color/lightlanse" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <!-- 实心 -->
            <solid android:color="@color/darklanse" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />
            <stroke android:width="@dimen/margin1" android:color="@color/darklanse" />
        </shape>
    </item>
</selector>